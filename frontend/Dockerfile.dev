# Development Dockerfile with hot reload
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Install curl for health checks
RUN apk add --no-cache curl

# Start development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]